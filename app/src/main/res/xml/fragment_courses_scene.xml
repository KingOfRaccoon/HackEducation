<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/tools">

    <ConstraintSet android:id="@+id/start_courses">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end_courses">
        <Constraint
            android:id="@+id/recycler_courses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"/>

        <Constraint
            android:id="@+id/card_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="7dp"
            app:layout_constraintTop_toBottomOf="@id/recycler_courses"
            android:alpha="0"
            android:layout_marginTop="16dp" />

        <Constraint
            android:id="@+id/button_recycler"
            android:alpha="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/recycler_courses"
            app:layout_constraintStart_toStartOf="@id/recycler_courses"
            android:layout_margin="20dp"/>

        <Constraint
            android:id="@id/button_show_all_skills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            style="@style/button_card"
            app:icon="@drawable/close">
        </Constraint>
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end_courses"
        app:constraintSetStart="@id/start_courses">
        <OnSwipe
            app:touchAnchorId="@id/recycler_courses"
            app:onTouchUp="decelerateAndComplete"
            app:dragDirection="dragUp"
            app:autoCompleteMode="continuousVelocity" />
    </Transition>
</MotionScene>
