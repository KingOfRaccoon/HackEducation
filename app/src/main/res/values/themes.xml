<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HackEducation" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="android:fontFamily">@font/comfortaa_regular</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#79F6F6F6</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="background_std">
        <item name="android:background">@drawable/background_standard</item>
    </style>

    <style name="Title_in_instruction">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">@color/c_for_text</item>
        <item name="android:lineHeight" tools:targetApi="p">32dp</item>
    </style>

    <style name="BodyText">
        <item name="android:textSize">18sp</item>
        <item name="android:color">@color/c_for_text</item>
        <item name="android:lineHeight" tools:targetApi="p">28dp</item>
    </style>

    <style name="ButtonText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="start_button">
        <item name="android:backgroundTint">@color/c_green</item>
        <item name="android:textColor">@color/c_for_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:clickable">true</item>
        <item name="android:checkable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="contentPaddingLeft">24dp</item>
        <item name="contentPaddingRight">24dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">28dp</item>
        <item name="cardBackgroundColor">#54626F</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="p">@color/c_for_text</item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/c_for_text</item>
    </style>

    <style name="buttons">
        <item name="android:backgroundTint">#A5FFD6</item>
        <item name="android:textColor">#277DA1</item>
        <item name="iconTint">#277DA1</item>
    </style>

    <style name="button_card" parent="Widget.Material3.Button.TextButton.Dialog.Icon">
        <item name="android:backgroundTint">#A5FFD6</item>
        <item name="iconTint">#277DA1</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">30dp</item>
    </style>
</resources>